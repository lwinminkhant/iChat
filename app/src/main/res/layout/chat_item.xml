<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <LinearLayout
        android:id="@+id/left_chatView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="80dp"
        android:backgroundTint="@color/purple_500"
        android:padding="15dp"
        android:layout_alignParentStart="true"
        android:background="@drawable/rounded_conor_background">
        <TextView
            android:id="@+id/tv_left_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello I'm Lwin Min Khant and now i'm developing a chat app"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/right_chatView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:backgroundTint="@color/teal_700"
        android:padding="15dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/rounded_conor_background">
        <TextView
            android:id="@+id/tv_right_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello I'm Lwin Min Khant and now i'm developing a chat app"/>
    </LinearLayout>
</RelativeLayout>